{
    "compilerOptions": {
        //? important
        "target": "es6",
        "moduleResolution": "Node",
        "module": "ES2020",

        "declaration": false,
        "noLib": false,
        "emitDecoratorMetadata": true, //*
        "experimentalDecorators": true, //*
        // "sourceMap": true,
        "pretty": true,

        //? user preferences
        // "forceConsistentCasingInFileNames": true,
        "strict": true,
        // "allowUnreachableCode": true, //*
        // "allowUnusedLabels": true, //*
        // "noImplicitAny": true, //*
        "noImplicitReturns": true,
        // "noImplicitUseStrict": false, //*
        // "noUnusedLocals": true, //*
        "noUnusedParameters": true,

        // "noEmit": true, //*
        "allowJs": true,
        // "checkJs": false, //*

        //? others
        // "outDir": "lib",
        // "rootDir": ".",
        // "baseUrl": "behavior_packs/",
        "listFiles": false,
        "noEmitHelpers": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,

        "paths": {
            "libraries/*": ["libraries/*"]
        }
    },
    "include": ["projects/**/behavior_pack/tscripts/**/*", "libraries/**/*"],
    "exclude": ["node_modules"]
}
