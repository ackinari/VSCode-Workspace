{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug",
            "type": "shell",
            "command": "npm",
            "args": ["run", "debug"],
            "group": "build",
            "detail": "Show current project information and debug details"
        },
        {
            "label": "TypeScript Compile",
            "type": "shell",
            "command": "npm",
            "args": ["run", "typescript"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Compile TypeScript files to JavaScript"
        },
        {
            "label": "Bundle",
            "type": "shell",
            "command": "npm",
            "args": ["run", "bundle"],
            "group": "build",
            "detail": "Create optimized bundle for production",
            "hide": true
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": "build",
            "detail": "Compile TypeScript and create bundle",
            "hide": true
        },
        {
            "label": "Clean Local",
            "type": "shell",
            "command": "npm",
            "args": ["run", "clean-local"],
            "group": "build",
            "detail": "Remove compiled scripts from project"
        },
        {
            "label": "Clean Collateral",
            "type": "shell",
            "command": "npm",
            "args": ["run", "clean-collateral"],
            "group": "build",
            "detail": "Remove project files from Minecraft directories"
        },
        {
            "label": "Clean All",
            "type": "shell",
            "command": "npm",
            "args": ["run", "clean"],
            "group": "build",
            "detail": "Remove all generated files"
        },
        {
            "label": "Copy Artifacts",
            "type": "shell",
            "command": "npm",
            "args": ["run", "copyArtifacts"],
            "group": "build",
            "detail": "Deploy project files to Minecraft directories",
            "hide": true
        },
        {
            "label": "Local Deploy",
            "type": "shell",
            "command": "npm",
            "args": ["run", "local-deploy"],
            "group": "build",
            "detail": "Deploy project to local Minecraft installation"
        },
        {
            "label": "Watch",
            "type": "shell",
            "command": "npm",
            "args": ["run", "watch"],
            "group": "build",
            "detail": "Watch files and auto-deploy changes"
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "npm",
            "args": ["run", "lint"],
            "group": "test",
            "detail": "Check code quality and formatting"
        },
        {
            "label": "Create McAddon",
            "type": "shell",
            "command": "npm",
            "args": ["run", "mcaddon"],
            "group": "build",
            "detail": "Build and package project as .mcaddon file"
        },
        {
            "label": "Analyze Project",
            "type": "shell",
            "command": "npm",
            "args": ["run", "analyze"],
            "group": "test",
            "detail": "Analyze project statistics and structure"
        },
        {
            "label": "Backup Project",
            "type": "shell",
            "command": "npm",
            "args": ["run", "backup"],
            "group": "build",
            "detail": "Create compressed backup of current project"
        },
        {
            "label": "Update Version",
            "type": "shell",
            "command": "npm",
            "args": ["run", "update-version"],
            "group": "build",
            "presentation": {
                "focus": true,
            },
            "detail": "Update project version in manifests"
        },
        {
            "label": "Generate UUIDs",
            "type": "shell",
            "command": "npm",
            "args": ["run", "generate-uuids"],
            "group": "build",
            "detail": "Generate new UUIDs for project manifests"
        },
        {
            "label": "Update Workspace",
            "type": "shell",
            "command": "npm",
            "args": ["run", "update-workspace"],
            "group": "build",
            "detail": "Update workspace configurations from template"
        },
        {
            "label": "List Projects",
            "type": "shell",
            "command": "npm",
            "args": ["run", "list-projects"],
            "group": "build",
            "detail": "List all available projects in the current workspace"
        },
        {
            "label": "Open Minecraft Folder",
            "type": "shell",
            "command": "npm",
            "args": ["run", "open-mc-folder"],
            "group": "build",
            "detail": "Open Minecraft development folders"
        }
    ]
}
