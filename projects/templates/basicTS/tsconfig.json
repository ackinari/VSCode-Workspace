{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@workspace/*": [
        "../../libraries/*"
      ]
    }
  },
  "include": [
    "behavior_pack/tscripts/**/*",
    "behavior_pack/typescripts/**/*",
    "../../libraries/**/*"
  ],
  "exclude": [
    "node_modules",
    "behavior_pack/scripts",
    "**/*.temp.json"
  ]
}
