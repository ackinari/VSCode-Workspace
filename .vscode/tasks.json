{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Build",
            "type": "shell",
            "command": "node",
            "args": ["../../scripts/workspace-manager.js", "start-current"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "isBackground": true,
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Build Project Once",
            "type": "shell",
            "command": "node",
            "args": ["../../scripts/workspace-manager.js", "build-current"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "close": true
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Sync Development",
            "type": "shell",
            "command": "node",
            "args": ["../../scripts/workspace-manager.js", "sync-development"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Auto Build",
            "type": "shell",
            "command": "taskkill",
            "args": ["/F", "/IM", "node.exe"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Debug Project Info",
            "type": "shell",
            "command": "node",
            "args": ["../../scripts/workspace-manager.js", "debug"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "List Available Libraries",
            "type": "shell",
            "command": "node",
            "args": ["../../scripts/workspace-manager.js", "list-libraries"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "New Project",
            "type": "shell",
            "command": "node",
            "args": ["../../scripts/scripts/new-project.js"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "close": true
            },
            "problemMatcher": []
        }
    ]
}
